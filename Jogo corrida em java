package TrabalhoPoo;

public class Corrida {

	   private static int DISTANCIA_MAXIMA = 25;

	    public static void main(String[] args) throws InterruptedException {

	        Carros carro1 = new Carros("Ayrton Senna");
	        Carros carro2 = new Carros("Alonso");

	        int rodada = 0;

	        do {
	            rodada++;
	            System.out.println("Rodada " + rodada);

	            carro1.mover();
	            carro2.mover();

	            exibirPosicoes(carro1, carro2);

	            Thread.sleep(1000);

	        } while (carro1.getDistanciaPercorrida() < DISTANCIA_MAXIMA
	                && carro2.getDistanciaPercorrida() < DISTANCIA_MAXIMA);

	    }

	    private static void exibirPosicoes(Carros carro1, Carros carro2) {
	        System.out.println(carro1.getNome() + " está na posição: " + 
	    carro1.getDistanciaPercorrida());
	        System.out.println(carro2.getNome() + " está na posição: " +
	    carro2.getDistanciaPercorrida());
	    }

	    private static void verificarVencedor(Carros carro1, Carros carro2) {
	        if (carro1.getDistanciaPercorrida() == DISTANCIA_MAXIMA && 
	        		carro2.getDistanciaPercorrida() == DISTANCIA_MAXIMA) {
	            System.out.println("Empate!");
	        } else if (carro1.getDistanciaPercorrida() >= DISTANCIA_MAXIMA) {
	            System.out.println(carro1.getNome() + " venceu!");
	        } else {
	            System.out.println(carro2.getNome() + " venceu!");
	        }
	    }
}


_________________________________________________________________

import java.util.Random;

public class Carros {
	 private String nome;
	    private int distanciaPercorrida;

	    public Carros(String nome) {
	        this.nome = nome;
	        this.distanciaPercorrida = 0;
	    }

	    public void mover() {
	        Random random = new Random();
	        this.distanciaPercorrida += random.nextInt(3) + 1;
	    }

	    public String getNome() {
	        return nome;
	    }

	    public int getDistanciaPercorrida() {
	        return distanciaPercorrida;
	    }
}
